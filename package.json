{
  "name": "icnote",
  "version": "1.0.1-Beta",
  "description": "keep your notes in a simple way with IC Notes",
  "bugs": {
    "url": "https://github.com/jesusantguerrero/icnote/issues",
    "email": "jesusant.guerrero@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "Note",
    "notes",
    "markdown",
    "tasklist"
  ],
  "author": {
    "name": "Jesus Guerrero",
    "email": "jesusant.guerrero@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jesusantguerrero/icnote.git"
  },
  "main": "main.js",
  "dependencies": {
    "ajv": "5.0.1",
    "electron-json-storage": "^3.0.1",
    "fs": "0.0.1-security",
    "jquery": "3.2.1",
    "remark": "^7.0.0",
    "remark-html": "^6.0.0",
    "save": "2.3.1",
    "to-markdown": "^3.0.4"
  },
  "devDependencies": {
    "@types/jquery": "^2.0.41",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "electron": "1.7.9",
    "electron-builder": "16.8.4",
    "uglifyjs-webpack-plugin": "0.4.6",
    "webpack": "3.5.6"
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "build": "webpack && build -w --x64",
    "pack": "build --dir",
    "dev": "webpack --progress --watch",
    "webpack": "webpack"
  },
  "build": {
    "appId": "com.insanecode.icnote",
    "productName": "IC Note",
    "compression": "maximum",
    "electronVersion": "1.6.2",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/installerIcon.ico",
      "installerSidebar": "build/banner.bmp"
    }
  }
}
