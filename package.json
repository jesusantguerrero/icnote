{
  "name": "icnote",
  "version": "1.0.0-Beta",
  "description": "keep your notes in a simple way with IC Notes",
  "bugs": {
    "url": "https://github.com/jesusantguerrero/icnote/issues",
    "email": "jesusant.guerrero@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "Note",
    "notes",
    "markdown",
    "tasklist"
  ],
  "author": {
    "name": "Jesus Guerrero",
    "email": "jesusant.guerrero@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jesusantguerrero/icnote.git"
  },
  "main": "main.js",
  "dependencies": {
    "electron-json-storage": "^3.0.1",
    "jquery": "^3.1.1",
    "remark": "^7.0.0",
    "remark-html": "^6.0.0",
    "to-markdown": "^3.0.4"
  },
  "devDependencies": {
    "@types/jquery": "^2.0.41",
    "electron": "^1.6.2",
    "electron-builder": "^16.6.0"
  },
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "build": "build -w --x64",
    "pack": "build --dir"
  },
  "build": {
    "appId": "com.insanecode.icnote",
    "productName": "IC Note",
    "compression": "maximum",
    "electronVersion": "1.6.2",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/installerIcon.ico",
      "installerSidebar": "build/banner.bmp"
    }
  }
}
